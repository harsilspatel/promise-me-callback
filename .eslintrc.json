{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "max-len": "off",
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "camelcase": "off",
    "space-before-function-paren": "off",
    "no-useless-return": "off",
    "no-useless-escape": "warn",
    "no-console": "warn"
  },
  "env": {
    "commonjs": true,
    "mocha": true,
    "node": true,
    "es6": true
  }
}
